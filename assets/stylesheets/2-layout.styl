font-size = 20px
font-size-small = 16px
body
	font: font-size Helvetica, Tahoma, Arial, sans-serif
	text-rendering: optimizeLegibility;
	color: #ffffff;
	background: black;
	padding: 5px 5px;


a, button {
	color: #ffffff;
	text-decoration: none;
	padding: 0.2em 0.5em;
	font-weight: lighter;
	background: #333333;
	line-height: 1.8em;
}
h1, h2, h3, h4, h5{
	text-transform: capitalize;
	text-shadow: #333333 -1px -1px 1px;
}
input{
	display: block;
	width: 80%;
	max-width: 300px;
	line-height: 1.6em;
	padding: 0.1em;
	margin: 0.4em 0.1em;
	font-size: font-size-small;
}
button{
	font-size: font-size;
	border: none;
	margin: 0.4em 0.1em;
	cursor: pointer;
}
#navigation-bar{
	float: left;
}
#current-user{
	float: right;
}
#content{
	clear: both;
	padding-top: 1em;
}
@media screen and (min-width: 600px) {
	body {
		padding: 35px;
	}
}
