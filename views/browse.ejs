<% layout('layout') -%>
<script type="text/html" id="file_template">
	<div class="file type-<#=h (file.type || "").toLowerCase() #>">
		<a href="<#=h file.url #>">
			<span class="basename"><#=h basename(file.name, true) #></span>
			<# if (file.type == 'File'){ #>
			<span class="extname"><#=h extname(file.name) #></span>
			<# } #>
			<# if (file.url_thumbnail){ #>
			<img class="thumbnail" src="<#=h file.url_thumbnail #>" alt="<#=h file.name #>" />
			<# } #>
		</a>
	</div>
</script>

<script type="text/html" id="files_template">
	<#
	for(var i in files){
		var file = files[i];
	#>
		<#= tmpl('file_template', { 'file': file }); #>
	<#
	}
	#>
</script>

<div id="files" class="grid-view"></div>
<script>
	appendData(<%- JSON.stringify(data) %>);
</script>